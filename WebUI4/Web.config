    <mailSettings>
      <smtp deliveryMethod="Network" from="notifications@serenatamariachi.com">
        <network defaultCredentials="false" host="smtp.gmail.com" port="587" userName="notifications@serenatamariachi.com" password="nr12345678"/>
      </smtp>
    </mailSettings>
  </system.net>

</configuration>
