<h2>
    Create a Work Space for your organization</h2>
<p>
    You can create your own work space that will have its own website.</p>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Unable to create a workspace for that name. Please correct the errors and try again.")

    <div class="editor" style="width: 700px;">
        <div class="editor-line ui-helper-clearfix">
            <div class="editor-label">
                @Html.LabelFor(m => m.SpaceName)
            </div>
            <div class="editor-field">
                <div class="urlFrame">
                    http:// @Html.TextBoxFor(m => m.SpaceName, new { placeholder = "Name of your site" })
                    .
                    @SpacesConfiguration.Settings.UrlDomain
                </div>
                @Html.ValidationMessage("SpaceName")
            </div>
        </div>
        <div class="editor-line ui-helper-clearfix">
            <div class="buttons">
                <input type="submit" value="@WebUI4.Resources.Common.Save" />

                @Html.ActionLink(WebUI4.Resources.Common.Cancel, "Index", "Home")
            </div>
        </div>
    </div>
}
@section Header{
    <style type="text/css">
        .urlFrame
        {
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 6px;
            width: 600px;
            font-family: Lucida Console;
        }
        .urlFrame input
        {
            border-style: none;
            margin: 0px;
            width: 200px;
        }
    </style>
}
