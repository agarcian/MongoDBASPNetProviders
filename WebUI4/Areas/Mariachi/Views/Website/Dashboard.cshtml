@{
    ViewBag.Title = "Dashboard";
}

<h2>Dashboard</h2>

<p>Who are you?</p>
<p>Choose the best option so your profile fits you best.</p>
<div>
<div class="ui-helper-clearfix">
    <div class="box">
        <h4>Mariachi Bands</h4>
        <div class="thumb"></div>
        <div class="intro">Promote your Mariachi and be listed in the Online Mariachi Directory.</div>
        <div><input value="Select" type="submit" /></div>
    </div>
    <div class="box">
        <h4>Mariachi Artists</h4>
        <div class="thumb"></div>
        <div class="intro">Create your personal Mariachi profile. Use it as your business card and promote your music.</div>
        <div><input value="Select" type="submit" /></div>
    </div>
    <div class="box">
        <h4>Fans</h4>
        <div class="thumb"></div>
        <div class="intro">Tell the world how much you love Mariachi and why.</div>
        <div><input value="Select" type="submit" /></div>
    </div>
</div>
</div>



@section Header{
